@import 'shared.mixin'


.verb-tabs
  display inline-block

  .verb-tab
    cursor pointer
    display inline-block
    background-color rgba(0, 0, 0, 0.2)
    border-radius 3px
    width 56px
    color white
    font-weight 700
    font-size 12px
    line-height 12px
    text-align center
    padding 3px 0
    margin-right 3px
    &.is-selected
      background-color #6B9DE3 // Blue
      cursor default
